#include "main.h"

/**
 * get_flags - Determines active formatting flags
 * @format: Formatted string containing the arguments
 * @i: Pointer to the current position in the format string
 *
 * Return: Calculated flags
 */
int get_flags(const char *format, int *i)
{
    int j, curr_i;
    int flags = 0;
    const char FLAGS_CHARACTERS[] = {'-', '+', '0', '#', ' ', '\0'};
    const int FLAGS_VALUES[] = {FLAG_MINUS, FLAG_PLUS, FLAG_ZERO, FLAG_HASH, FLAG_SPACE, 0};

    for (curr_i = *i + 1; format[curr_i] != '\0'; curr_i++)
    {
        for (j = 0; FLAGS_CHARACTERS[j] != '\0'; j++)
        {
            if (format[curr_i] == FLAGS_CHARACTERS[j])
            {
                flags |= FLAGS_VALUES[j];
                break;
            }
        }

        if (FLAGS_CHARACTERS[j] == 0)
        {
            break;
        }
    }

    *i = curr_i - 1;
    return (flags);
}
